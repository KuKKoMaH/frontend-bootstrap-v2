@font-face
  font-family: 'Rouble'
  src: url('../fonts/Rouble-Regular.eot')
  src: url('../fonts/Rouble-Regular.eot') format('embedded-opentype'),
          url('../fonts/Rouble-Regular.woff2') format('woff2'),
          url('../fonts/Rouble-Regular.woff') format('woff')
  font-weight: normal
  font-style: normal

body
  margin: 0
  padding: 0
  font-family: 'Roboto', sans-serif

*, *:before, *:after
  box-sizing: border-box

.page
  wrapper()

:global
  .r
    font-family: 'Rouble'
    display: inline